<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Outside panal of buttons -->
    <item>
        <shape>
            <solid android:color="@color/outsidePanelClr" />

            <stroke
                android:width="0dp"
                android:color="@color/outsidePanelClr" />

            <corners android:radius="0dp" />

            <padding
                android:bottom="@dimen/btnOutsidePadding"
                android:left="@dimen/btnOutsidePadding"
                android:right="@dimen/btnOutsidePadding"
                android:top="@dimen/btnOutsidePadding" />
        </shape>
    </item>
    <!-- Button shadow -->
    <item>
        <shape>
            <solid android:color="@color/btnShadowClr2" />

            <stroke
                android:width="0dp"
                android:color="@color/btnShadowClr2" />

            <corners android:radius="@dimen/btnShadowRadius" />

            <padding
                android:bottom="@dimen/btnShadowPadding"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
    <!-- Main part of button -->
    <item>
        <shape>
            <solid android:color="@color/btnMainClr" />

            <gradient android:angle="@integer/gradAngle" android:startColor="@color/btnMainClr" android:endColor="@color/gradientEndClr" />
            
            <stroke
                android:width="0dp"
                android:color="@color/btnMainClr" />

           <corners android:radius="@dimen/btnRadius" />

            <padding
                android:bottom="0dp"
                android:left="@dimen/btnMainPadding"
                android:right="0dp"
                android:top="@dimen/btnMainPadding" />
        </shape>
    </item>

</layer-list>